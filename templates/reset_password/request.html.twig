{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe {{ parent() }}
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}
	<section class="container section pt-5">
		<div class="row justify-content-center">
			<h1 class="section-title h2">Réinitialisez votre mot de passe</h1>
			<div class="col-md-6 shadow rounded-3 py-3 py-sm-4 mb-2"> {{ form_start(requestForm) }} {{ form_row(requestForm.email) }}
				<div>
					<small>
						Entrez votre adresse e-mail et nous vous enverrons un lien pour réinitialiser votre mot de passe.
					</small>
				</div>

				<button class="btn btn-sm btn-primary">Envoyer un e-mail de réinitialisation de mot de passe</button> {{ form_end(requestForm) }}
			</div>
		</div>
	</section>
	{% include "base/_brand.html.twig" %}
{% endblock %}
