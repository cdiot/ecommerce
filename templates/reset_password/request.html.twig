{% extends 'base.html.twig' %}

{% block title %} {{ 'title.reset_password'|trans }} {{ parent() }}
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}
	<section class="container section pt-5">
		<div class="row justify-content-center">
			<h1 class="section-title h2">{{ 'title.reset_password'|trans }}</h1>
			<div class="col-md-6 shadow rounded-3 py-3 py-sm-4 mb-2"> {{ form_start(requestForm) }} {{ form_row(requestForm.email) }}
				<div>
					<small>{{ 'help.enter_reset_password'|trans }}</small>
				</div>

				<button class="btn btn-sm btn-primary">{{ 'action.send_reset_password'|trans }}</button> {{ form_end(requestForm) }}
			</div>
		</div>
	</section>
	{% include "base/_brand.html.twig" %}
{% endblock %}
