{% extends 'base.html.twig' %}

{% block title %} {{ 'title.404'|trans }}
{% endblock %}

{% block body %}
	<div class="container py-5">
		<div class="row justify-content-center">
			<div class="col-9">
				<h1 class="display-4">{{ 'http_error_404.title'|trans }}</h1>
				<p>{{ 'http_error_404.description'|trans({'link': path('contact')}) }}</p>
				<a href="{{ path('home') }}" class="btn btn-info">{{ 'menu.back_to_home'|trans }}</a>
			</div>
		</div>
		<!-- Follow us grid -->
		<section class="container py-lg-4 my-4">
			<h2 class="h3 text-center pb-4 fw-bold">{{ 'subtitle.follow_us'|trans }}</h2>
			<div
				class="row justify-content-center">
				<!-- Link-->
				<div class="col-md-3 col-sm-4 col-6">
					<div class="bg-white shadow-sm rounded-3 text-center py-3 py-sm-4 mb-2">
						<a href="#">
							<img src="{{ asset('build/images/facebook.png') }}" alt="Icon Facebook">
						</a>
					</div>
				</div>
				<!-- Link-->
				<div class="col-md-3 col-sm-4 col-6">
					<div class="bg-white shadow-sm rounded-3 text-center py-3 py-sm-4 mb-2">
						<a href="#">
							<img src="{{ asset('build/images/twitter.png') }}" alt="Icon Twitter">
						</a>
					</div>
				</div>
				<!-- Link-->
				<div class="col-md-3 col-sm-4 col-6">
					<div class="bg-white shadow-sm rounded-3 text-center py-3 py-sm-4 mb-2">
						<a href="#">
							<img src="{{ asset('build/images/instagram.png') }}" alt="Icon Instagram">
						</a>
					</div>
				</div>
				<!-- Link-->
				<div class="col-md-3 col-sm-4 col-6">
					<div class="bg-white shadow-sm rounded-3 text-center py-3 py-sm-4 mb-2">
						<a href="#">
							<img src="{{ asset('build/images/tiktok.png') }}" alt="Icon Tiktok">
						</a>
					</div>
				</div>
			</div>
		</section>
	</div>
