{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title 'Tableau de bord' %}

{% block main %}
	<section class="container">
		<div class="row">
			<div class="col-6 alert-info">
				<span class="display-3">{{ countAllUser['value'] }}
					Utilisateurs</span>
			</div>
			<div class="col-6 alert-success">
				<span class="display-3">{{ countAllProduct['value'] }}
					Produits</span>
			</div>
			<div class="col-6 alert-secondary">
				<span class="display-3">{{ countAllOrder['value'] }}
					Commandes</span>
			</div>
		</div>
		<div class="row mt-3">
			<div class="col-12">
				<P class="h3">Liste des cat√©gories</p>
				<ul class="list-group">
					{% for category in categories %}
						<li class="list-group-item">{{ category.name }}</li>
					{% endfor %}
				</ul>
			</div>
		</div>
		<div class="row mt-3">
			<div class="col-12">
				<P class="h3">Liste des transporteurs</p>
				<ul class="list-group">
					{% for carrier in carriers %}
						<li class="list-group-item">{{ carrier.name }}</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</section>
{% endblock %}
