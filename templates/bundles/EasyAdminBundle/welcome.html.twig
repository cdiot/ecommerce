{# @var ea \EasyCorp\Bundle\EasyAdminBundle\Context\AdminContext #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title %} {{ 'title.dashboard'|trans }}
{% endblock %}

{% block main %}
	<section class="container">
		<div class="row">
			<div class="col-6 alert-info">
				<span class="display-3">{{ 'dashboard.users'|trans({'count': countAllUser['value']}) }}</span>
			</div>
			<div class="col-6 alert-success">
				<span class="display-3">{{ 'dashboard.products'|trans({'count': countAllProduct['value']}) }}</span>
			</div>
			<div class="col-6 alert-secondary">
				<span class="display-3">{{ 'dashboard.orders'|trans({'count': countAllOrder['value']}) }}</span>
			</div>
		</div>
		<div class="row mt-3">
			<div class="col-12">
				<P class="h3">{{ 'subtitle.list_categories'|trans }}</p>
				<ul class="list-group">
					{% for category in categories %}
						<li class="list-group-item">{{ category.name }}</li>
					{% endfor %}
				</ul>
			</div>
		</div>
		<div class="row mt-3">
			<div class="col-12">
				<P class="h3">{{ 'subtitle.list_carriers'|trans }}</p>
				<ul class="list-group">
					{% for carrier in carriers %}
						<li class="list-group-item">{{ carrier.name }}</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	</section>
{% endblock %}
