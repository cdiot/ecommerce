{% extends 'base.html.twig' %}

{% block title %}
	Mes Commandes {{ parent() }}
{% endblock %}

{% block body %}
	<!-- Orders -->
	<section class="container py-lg-4 my-4 section">
		<h1 class="h2 section-title">Mes Commandes</h1>
		<a href="{{ path('account') }}">Retour à mon compte</a>
		{% if orders|length == 0 %}
			<hr>
			<p class="text-center">Vous n'avez pas encore passé de commandes sur notre boutique en ligne.</p>
		{% else %}
			<table class="table mt-4">
				<thead>
					<tr>
						<th scope="col">Référence</th>
						<th scope="col">Etat</th>
						<th scope="col">Passée le</th>
						<th scope="col">Produit(s)</th>
						<th scope="col">Total</th>
					</tr>
				</thead>
				<tbody>
					{% for order in orders %}
						<tr>
							<td>
								<span class="badge bg-secondary">{{ order.reference }}</span>
							</td>
							<td>
								{% if order.state == 1 %}
									Paiement accepté
								{% elseif order.state == 2 %}
									Préparation en cours
								{% elseif order.state == 3 %}
									Livraison en cours
								{% endif %}
							</td>
							<th>{{ order.createdAt|date('d/m/Y') }}</th>
							<td>{{ order.orderDetails|length }}</td>
							<td>{{ price(order.carrierPrice + order.getTotal) }}</td>
							<td class="text-right">
								<a href="{{ path('account_order_show', {'reference': order.reference }) }}">Voir ma commande</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		{% endif %}
	</section>
	{% include "base/_brand.html.twig" %}
{% endblock %}
