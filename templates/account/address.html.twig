{% extends 'base.html.twig' %}

{% block title %}
	Mes Adresses {{ parent() }}
{% endblock %}

{% block body %}
	<!-- Address -->
	<section class="container py-lg-4 my-4 section">
		<h1 class="h2 section-title">Mes Adresses</h1>
		<div class="row justify-content-center">
			<p>
				<a href="{{ path('account') }}">Retour à mon compte</a>
			</p>
			{% if app.user.addresses|length == 0 %}
				<p class="text-center">Vous n'avez pas encore ajouté d'adresses dans votre compte client, pour en ajouter une veuillez
					<a href="{{ path('account_address_add') }}">cliquer ici</a>.</p>
			{% else %}
				{% for address in app.user.addresses %}
					<!-- Card-->
					<div class="card m-1" style="width: 18rem;">
						<div class="card-body">
							<h5 class="card-title">{{ address.name }}</h5>
							<p class="card-text">{{ address.address }}<br> {{ address.postal }}
								- {{ address.city }}
								- {{ address.country }}</p>
							<p>
								<a href="{{ path('account_address_edit', {'id': address.id }) }}">Modifier</a>
								|
								<a href="{{ path('account_address_delete', {'id': address.id }) }}">Supprimer</a>
							</p>
						</div>
					</div>
				{% endfor %}
			{% endif %}
			<!-- Link-->
			<div class="col-md-3 col-sm-4 col-6">
				<div class="bg-white shadow-sm rounded-3 text-center py-3 py-sm-4 mb-2">
					<a href="{{ path('account_address_add') }}">
						Ajouter une adresse
					</a>
				</div>
			</div>
		</div>
	</section>
	{% include "base/_brand.html.twig" %}
{% endblock %}
